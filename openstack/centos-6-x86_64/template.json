{
  "builders": [
    {
      "type": "qemu",
      "name": "centos-6-openstack-x86_64",
      "vm_name": "centos-6-openstack-x86_64",
      "accelerator": "kvm",
      "disk_size": 10952,
      "format": "qcow2",
      "headless": false,
      "http_directory": "http",
      "iso_checksum": "4a5fa01c81cc300f4729136e28ebe600",
      "iso_checksum_type": "md5",
      "iso_url": "http://centos.osuosl.org/6.4/isos/x86_64/CentOS-6.4-x86_64-minimal.iso",
      "net_device": "virtio",
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo 'osuadmin'|sudo -S sh 'shutdown.sh'",
      "ssh_password": "osuadmin",
      "ssh_port": 22,
      "ssh_username": "osuadmin",
      "ssh_wait_timeout": "10000s",
      "boot_wait": "10s",
      "boot_command": [
        "<tab> text ks=http://10.0.2.2:{{ .HTTPPort }}/preseed.cfg<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "../../scripts/common.sh",
      "destination": "/tmp/common.sh"
    },
    {
      "type": "shell",
      "scripts": [
        "../../scripts/epel.sh",
        "../../scripts/openstack-yum.sh",
        "../../scripts/cleanup.sh"
      ],
      "override": {
        "centos-6-openstack-x86_64": {
          "execute_command": "echo 'osuadmin'|sudo -S sh '{{.Path}}'"
        }
      }
    }
  ]
}
